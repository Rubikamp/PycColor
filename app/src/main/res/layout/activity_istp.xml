<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".istp_Activity"
    android:background="@drawable/bg_istp">


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tip_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/ISTP_text_sub"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="wrap_content"
        android:id="@+id/ISTP_TEXT"
        android:layout_height="wrap_content"
        android:text="@string/ISTP_text"
        android:fontFamily="@font/simple"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tip_tittle"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_morgan"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="45dp"
        android:src="@mipmap/Megan_istp"
        app:layout_constraintTop_toTopOf="@+id/people_who_are_istp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_mulan"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="290dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/Mulan_istp"
        app:layout_constraintTop_toTopOf="@id/people_who_are_istp"/>



    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:srcCompat="@mipmap/Toph_istp"
        android:id="@+id/imagr_toph"
        android:layout_marginStart="120dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="@id/people_who_are_istp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:id="@+id/image_jacobe"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/Jacobe_istp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="@id/people_who_are_istp"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:id="@+id/jobs_istp"
        android:text="@string/jobs_ISTP"
        android:textSize="22sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="290dp"
        app:layout_constraintTop_toTopOf="@id/tip_tittle" />


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="@string/engineer"
        android:id="@+id/engineer"
        android:textColor="@color/black"
        android:layout_marginEnd="250dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="24sp"
        android:fontFamily="@font/bold"
        app:layout_constraintTop_toTopOf="@id/jobs_istp" />


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/biologist"
        android:id="@+id/biologist"
        android:layout_marginEnd="250dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/engineer"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/the_mechanic"
        android:textSize="24sp"
        android:fontFamily="@font/bold"
        android:id="@+id/the_mechanic"
        android:layout_marginEnd="200dp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/biologist"/>



    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/electrical_engineer"
        android:textSize="24sp"
        android:fontFamily="@font/bold"
        android:id="@+id/electrical_engineer"
        android:layout_marginEnd="150dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/the_mechanic"/>




    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/investor"
        android:id="@+id/investor"
        android:layout_marginStart="180dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/bold"
        app:layout_constraintTop_toTopOf="@id/jobs_istp" />



    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/technician"
        android:id="@+id/Technician"
        android:layout_marginStart="210dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/bold"
        app:layout_constraintTop_toTopOf="@id/jobs_istp"/>




    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/people_who_are_istp"
        android:textSize="26sp"
        android:layout_marginTop="260dp"
        android:gravity="center"
        android:id="@+id/people_who_are_istp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/bold_simple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/jobs_istp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>