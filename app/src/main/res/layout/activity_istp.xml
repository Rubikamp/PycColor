<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_istp"
        tools:context=".IstpActivity">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="12sp"
            android:id="@+id/tip_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text="@string/ISTP_text_sub"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ISTP_TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/simple"
            android:gravity="center"
            android:text="@string/ISTP_text"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tip_tittle" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_morgan"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="45dp"
            android:src="@mipmap/megan_istp"
            app:layout_constraintTop_toTopOf="@+id/people_who_are_istp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_mulan"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="290dp"
            android:src="@mipmap/mulan_istp"
            app:layout_constraintTop_toTopOf="@id/people_who_are_istp" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imagr_toph"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="@id/people_who_are_istp"
            app:srcCompat="@mipmap/toph_istp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_jacobe"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="@id/people_who_are_istp"
            app:srcCompat="@mipmap/jacobe_istp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/jobs_istp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bold"
            android:text="@string/jobs_ISTP"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ISTP_TEXT" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/engineer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="250dp"
            android:fontFamily="@font/bold"
            android:text="@string/engineer"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/jobs_istp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/biologist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="250dp"
            android:fontFamily="@font/bold"
            android:text="@string/biologist"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/engineer" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/the_mechanic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="200dp"
            android:fontFamily="@font/bold"
            android:text="@string/the_mechanic"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/biologist" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/electrical_engineer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="150dp"
            android:fontFamily="@font/bold"
            android:text="@string/electrical_engineer"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/the_mechanic" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/investor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/bold"
            android:text="@string/investor"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/jobs_istp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/Technician"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="210dp"
            android:layout_marginTop="110dp"
            android:fontFamily="@font/bold"
            android:text="@string/technician"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/jobs_istp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/people_who_are_istp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:fontFamily="@font/bold_simple"
            android:gravity="center"
            android:text="@string/people_who_are_istp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/jobs_istp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
